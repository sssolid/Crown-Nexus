# Basic application settings
PROJECT_NAME="Crown Nexus"
DESCRIPTION="B2B platform for automotive aftermarket industry"
VERSION="0.1.0"
API_V1_STR="/api/v1"
ENVIRONMENT="development" # Options: development, staging, production
BASE_DIR="/path/to/your/app"

# Locale settings
DEFAULT_LOCALE="en"
AVAILABLE_LOCALES=["en", "es", "fr", "de"]

# Logging settings
LOG_LEVEL="INFO" # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="text" # Options: text, json

# Database settings
POSTGRES_SERVER="nexus-01"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="crown_nexus"
POSTGRES_PORT="5432"
SQLALCHEMY_DATABASE_URI="postgresql+asyncpg://postgres:postgres@nexus-01:5432/crown_nexus"
DB_SCHEMAS=["api_key", "audit", "chat", "company", "compliance", "currency", "location", "media", "model_mapping", "product", "reference", "sync_history", "user", "vcdb", "pcdb", "padb", "qdb"]

# Redis settings
REDIS_HOST="nexus-01"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_MAX_CONNECTIONS=5000
REDIS_URI="redis://nexus-01:6379/0"

# Security settings
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=11520 # 8 days
ALGORITHM="HS256"
ALLOWED_HOSTS = ["localhost", "127.0.0.1"]
TRUSTED_PROXIES = ["127.0.0.1", "::1"]
CORS_ALWAYS_ALLOW = False
BACKEND_CORS_ORIGINS = ["http://localhost:5173"]
CSRF_COOKIE_SECURE=true
CSRF_TOKEN_EXPIRY=86400
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_MULTIPLIER=1.5
RATE_LIMIT_STORAGE="redis"

# Content security policies
CONTENT_SECURITY_POLICY="default-src 'self'; img-src 'self' data: https://fastapi.tiangolo.com; script-src 'self' https://cdn.jsdelivr.net 'unsafe-inline'; style-src 'self' https://cdn.jsdelivr.net 'unsafe-inline'; connect-src 'self';"
PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=(), payment=()"

# Audit logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_TO_DB=true
AUDIT_LOG_TO_FILE=false
AUDIT_LOG_FILE="logs/audit.log"

# Chat security settings
CHAT_ENCRYPTION_SALT="generate_random_salt_in_production"
CHAT_MESSAGE_LIMIT=50
CHAT_RATE_LIMIT_PER_MINUTE=60
CHAT_WEBSOCKET_KEEPALIVE=30
CHAT_MAX_MESSAGE_LENGTH=5000

# Media settings
MEDIA_ROOT="../media"
MEDIA_URL="/media/"
MEDIA_STORAGE_TYPE="local"
MEDIA_CDN_URL=""

# Elasticsearch settings
ELASTICSEARCH_HOST="nexus-01"
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""

# Fitment settings
VCDB_PATH="data/vcdb.accdb"
PCDB_PATH="data/pcdb.accdb"
MODEL_MAPPINGS_PATH=""
FITMENT_DB_URL=""
FITMENT_LOG_LEVEL="INFO"
FITMENT_CACHE_SIZE=100

# Currency settings
EXCHANGE_RATE_API_KEY=""
EXCHANGE_RATE_UPDATE_FREQUENCY=24
STORE_INVERSE_RATES=true

# Celery settings
CELERY_BROKER_URL=""
CELERY_RESULT_BACKEND=""

# Filemaker integration settings
FILEMAKER_DSN="Nexus - Filemaker"
FILEMAKER_USERNAME=
FILEMAKER_PASSWORD=
FILEMAKER_DATABASE=
FILEMAKER_SERVER=MARKETING.CAS.local
FILEMAKER_PORT=2399
FILEMAKER_SSL=false
FILEMAKER_DRIVER_PATH=""
FILEMAKER_ODBC_DRIVER_NAME="Filemaker ODBC"
FILEMAKER_ALLOWED_TABLES=["Master"]
FILEMAKER_ALLOWED_LAYOUTS=["Master"]
FILEMAKER_CONNECTION_TIMEOUT=30
FILEMAKER_QUERY_TIMEOUT=60
FILEMAKER_ENCRYPT_CONNECTION=false
FILEMAKER_USE_EXTENDED_STATEMENTS=false
FILEMAKER_SYNC_ENABLED=false
FILEMAKER_SYNC_INTERVAL=86400
FILEMAKER_SYNC_LAYOUTS={"": ""}
FILEMAKER_BATCH_SIZE=1000
FILEMAKER_MAX_WORKERS=4

# AS400 integration settings
# AS400_DSN=AS400
JT400_JAR_PATH="../data/jt400.jar"
AS400_USERNAME=
AS400_PASSWORD=
AS400_DATABASE=DSTDATA
AS400_SERVER=
AS400_PORT=446
AS400_SSL=false
AS400_ALLOWED_TABLES=["INSMFH","INSMFT","ARCUST"]
AS400_ALLOWED_SCHEMAS=["DSTDATA","TESTLIB"]
